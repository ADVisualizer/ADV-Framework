<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.SegmentedButton?>
<AnchorPane prefHeight="700.0" prefWidth="1000.0" stylesheets="@../css/root-layout.css"
            xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ch.adv.ui.core.presentation.RootView">


    <ToolBar prefHeight="55.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
             AnchorPane.topAnchor="0.0">
        <Button fx:id="loadSessionButton" mnemonicParsing="false" onAction="#handleLoadSessionClicked"
                contentDisplay="TOP">
            <graphic>
                <FontAwesomeIconView glyphName="FOLDER_OPEN"/>
            </graphic>
        </Button>
        <Button fx:id="saveActiveSessionButton" mnemonicParsing="false" onAction="#handleSaveSessionClicked"
                contentDisplay="TOP">
            <graphic>
                <FontAwesomeIconView glyphName="FLOPPY_ALT"/>
            </graphic>
        </Button>
        <Button fx:id="closeActiveSessionButton" mnemonicParsing="false" onAction="#handleRemoveSessionClicked"
                contentDisplay="TOP">
            <graphic>
                <FontAwesomeIconView glyphName="TIMES"/>
            </graphic>
        </Button>
        <Button fx:id="closeAllSessionsButton" mnemonicParsing="false" onAction="#handleClearAllSessionsClicked"
                contentDisplay="TOP">
            <graphic>
                <FontAwesomeIconView glyphName="TIMES"/>
            </graphic>
        </Button>

        <Pane HBox.hgrow="ALWAYS"/>

        <SegmentedButton fx:id="changeLanguageButton">
            <buttons>
                <ToggleButton fx:id="english" selected="true"/>
                <ToggleButton fx:id="german"/>
            </buttons>
        </SegmentedButton>
    </ToolBar>

    <SplitPane dividerPositions="0.28" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="55.0">
        <AnchorPane>
            <TitledPane animated="false" fx:id="sessionListViewTitle" collapsible="false" AnchorPane.bottomAnchor="0.0"
                        AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <ListView fx:id="sessionListView"/>
            </TitledPane>
        </AnchorPane>
        <AnchorPane>
            <TabPane fx:id="sessionTabPane" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0"
                     AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
        </AnchorPane>
    </SplitPane>
</AnchorPane>
